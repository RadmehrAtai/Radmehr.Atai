{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <header>
        {{ knp_menu_render('main') }}
        <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex">
            <span class="navbar-brand mb-0 mx-2 h1">My Travel</span>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_home_index') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_hotel_index') }}">Hotels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_attraction_index') }}">Attractions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_room_index') }}">Rooms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_event_index') }}">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_location_index') }}">Locations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_support_index') }}">Support</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_about_index') }}">About</a>
                    </li>
                </ul>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li class="nav-item">
                                <a class="nav-link"><span>Welcome!</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}"><span
                                            class="glyphicon glyphicon-user"></span>
                                    Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}"><span
                                            class="glyphicon glyphicon-user"></span>
                                    Register</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('app_login') }}"><span
                                            class="glyphicon glyphicon-log-in"></span> Login</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h1>{{ 'app.hotel.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'app.hotel.id'|trans }}</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.name'|trans }}</th>
                <td>{{ hotel.name }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.address'|trans }}</th>
                <td>{{ hotel.address }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.grade'|trans }}</th>
                <td>{{ hotel.grade }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.number'|trans }}</th>
                <td>{{ hotel.numberOfRooms }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.phone'|trans }}</th>
                <td>{{ hotel.phoneNumber }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.capacity'|trans }}</th>
                <td>{{ hotel.capacity }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.created'|trans }}</th>
                <td>{{ hotel.createdAt ? hotel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'app.hotel.updated'|trans }}</th>
                <td>{{ hotel.updatedAt ? hotel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_hotel_index') }}">{{ 'app.hotel.back'|trans }}</a>

    <a class="btn btn-warning" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">{{ 'app.hotel.edit'|trans }}</a>

    {{ include('hotel/_delete_form.html.twig') }}

    <footer class="text-center text-lg-start bg-light text-muted">

        <section class="border-bottom">
        </section>

        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>My Travel
                        </h6>
                        <p>
