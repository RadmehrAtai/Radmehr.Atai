            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Grade</th>
                <th scope="col">NumberOfRooms</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">Capacity</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.name }}</td>
                <td>{{ hotel.address }}</td>
                <td>{{ hotel.grade }}</td>
                <td>{{ hotel.numberOfRooms }}</td>
                <td>{{ hotel.phoneNumber }}</td>
                <td>{{ hotel.capacity }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_hotel_show', {'id': hotel.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

